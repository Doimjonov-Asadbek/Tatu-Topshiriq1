<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:background="@color/purple_500"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	
	<ProgressBar
			style="?android:attr/progressBarStyle"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:id="@+id/progressBar"
			app:layout_constraintTop_toTopOf="@+id/listcoin"
			app:layout_constraintBottom_toBottomOf="@+id/listcoin"
			app:layout_constraintEnd_toEndOf="@+id/listcoin"
			app:layout_constraintStart_toStartOf="@+id/listcoin"/>
	<ListView
			android:id="@+id/listcoin"
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent">
	</ListView>
</androidx.constraintlayout.widget.ConstraintLayout>